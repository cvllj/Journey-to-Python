import turtle
import time

my_turtle = turtle.Turtle()

def square():
    n = 300 #i have assigned n as a variable for a shorcut so instead of inputting one by one on the forward.

    my_turtle.forward(n)
    my_turtle.left(90)
    my_turtle.forward(n)
    my_turtle.left(90)
    my_turtle.forward(n)
    my_turtle.left(90)
    my_turtle.forward(n)

print(square())

time.sleep(2)
