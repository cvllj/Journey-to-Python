import turtle
import time

my_turtle = turtle.Turtle()

def square(length, angle):

    my_turtle.forward(length)
    my_turtle.left(angle)
    my_turtle.forward(length)
    my_turtle.left(angle)
    my_turtle.forward(length)
    my_turtle.left(angle)
    my_turtle.forward(length)

print(square(200, 90)) # basically we input the length / angle of the square here in this line of code

time.sleep(2)
