import turtle
import time

my_turtle = turtle.Turtle()

def square(length, angle):

    my_turtle.forward(length)
    my_turtle.left(angle)
    my_turtle.forward(length)
    my_turtle.left(angle)
    my_turtle.forward(length)
    my_turtle.left(angle)
    my_turtle.forward(length)

for i in range(4): # this line of code is for lopping and instead of typing the print square we can input on the range() on how many times it will do it

    print(square(50, 90))

time.sleep(2)
